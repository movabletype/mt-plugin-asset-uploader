{
  "compilerOptions": {
    "module": "ES2020",
    "moduleResolution": "bundler",
    "lib": ["ES2020", "DOM"],
    "target": "ES2020",
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "rootDir": ".",
    "types": ["vitest/globals", "@movabletype/app"]
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./node_modules/**"]
}
