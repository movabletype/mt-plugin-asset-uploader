{
  "name": "asset-uploader",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "copy:app": "cpx 'node_modules/@movabletype/app/dist/bundle/**/*' app-dist",
    "dev": "npm run copy:app && vite build --watch",
    "build": "npm run copy:app && rimraf dist && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@movabletype/app": "file:../../../../movabletype-frontend-framework/packages/app",
    "@movabletype/svelte-components": "file:../../../../movabletype-frontend-framework/packages/svelte-components",
    "@sveltejs/vite-plugin-svelte": "^3.1.2",
    "@types/eslint": "^8.56.12",
    "cpx": "^1.5.0",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.46.1",
    "prettier": "^3.5.3",
    "prettier-plugin-svelte": "^3.3.3",
    "rimraf": "^5.0.10",
    "svelte": "^5.28.2",
    "svelte-check": "^3.8.6",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.0",
    "vite": "^5.4.19",
    "vitest": "^1.6.1"
  },
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module"
}
